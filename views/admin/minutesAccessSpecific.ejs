  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include ("navbar") %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y" id="qwee">
              <div class="row">
                <div id="status" class="invisible alert alert-success alert-dismissible" role="alert">
                  <a><%= errormessage %></a>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="col-12">
                  <div class="card">
                    <h3 class="card-header"><%= post.title%></h3>
                    <div
                      class="card-body demo-vertical-spacing demo-only-element"
                    >
                      <form
                        method="POST"
                        action="/files?_method=PUT"
                      >
                      <div class="mb-3 ">
                    <h6 class="card-title" style="white-space: pre-line"><%= post.minutes%></h6>
                        
                      </div>
                      <a href="/public/<%= post.file_url%>" class="card-link">File Link</a>
                      <hr class="m-0" />
                      <h5 class="card-title">posted by</h5>
                      <button
                      class="ms-2 btn btn-icon btn-outline-primary float-end "
                      id="export" 
                      data-id="<%= post.file_id%>"
                      type="button"
                      disabled
                    >
                    <span class="tf-icons bx "></span>
                    </button>

                      <button
                      class="ms-2 btn btn-icon btn-outline-primary float-end "
                      id="deleteBtn" 
                      data-id="<%= post.file_id%>"
                      type="button"
                      disabled
                    >
                    <span class="tf-icons bx bxs-trash "></span>
                    </button>
                    <button
                      class="btn btn-icon btn-outline-primary float-end"
                      id="inputGroupFileAddon04"
                      type="submit"
                      name ='file_Id'
                      value = "<%= post.file_id%>"
                      disabled
                    >
                    <span class="tf-icons bx bxs-save"></span>
                    </button>
  
                    </div>
                    
                    

                <h5 class="card-header">Who Attended the Meeting and can access this file </h5>

                    <div class="table-responsive text-nowrap" >
                      <label>
                        <input type="checkbox" id="filter-chk">
                        Filter
                      </label>
                      <table class="table table-hover" id="myTable">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th>College</th>
                            <th>Can View </th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          <% users.forEach(user =>{ %>
    
                          <tr>
                            <td>
                              <i class="fab fa-angular fa-lg text-danger me-3"></i>
                              <strong
                                ><%=user.Firstname%> <%=user.Middlename%>
                                <%=user.Lastname%>
                              </strong>
                            </td>
                            <td><%=user.Gender%></td>
                            <td><%=user.Email%></td>
                            <td><%=user.PhoneNumber%></td>
                            <td><%=user.College%></td>
                            
                            <td>
                              <%if (user.access == '1'){%>
                                <input type="checkbox" id="vehicle1" name="Selected" value="<%=user.Id%>" checked>
                                <%}else{%>
                                <input type="checkbox" id="vehicle1" name="Selected" value="<%=user.Id%>">
                                <%}%>

                                <%})%>
                                
                            </div>
                            
                      </form>

                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <footer class="content-footer footer bg-footer-theme"></footer>
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="../assets/vendor/libs/jquery/jquery.js"></script>
    <script src="../assets/vendor/libs/popper/popper.js"></script>
