            <script src="./BUUFAI_files/jquery.js.download"></script>

            <script>
              $(document).ready(function () {
                $("#subscribe_email").on("click", function () {
                  let email = $("#newsletter1").val();

                  if (email == "") {
                    alert("Please enter your email address");
                  } else {
                    var mailformat =
                      /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;

                    if (!email.match(mailformat)) {
                      alert("Please enter a valid email address");
                    } else {
                      $.ajax({
                        url: "backend/functions.php",

                        method: "POST",

                        data: { action: "subscribe_email", email: email },

                        success: function (data) {
                          if (data == "success") {
                            alert(
                              "You have successfully subscribed to our newsletter!"
                            );

                            $("#newsletter1").val("");
                          } else if (data == "exist") {
                            alert(
                              "Failed. You are already subscribed to our newsletter"
                            );
                          } else {
                            alert("Something went wrong. Try again later.");
                          }
                        },

                        error: function (data) {
                          alert("Something went wrong. Try again later.");
                        },
                      });
                    }
                  }
                });
              });
            </script>
